<%- include('./includes/head.ejs') %>
    <link rel="stylesheet" href="/css/weather-data.css">
    </head>

    <body>
        <header>
            <%- include('./includes/side-nav.ejs') %>
        </header>

        <% if (weatherData && weatherData.length> 0) { %>
            <div class="section no-pad-bot">
                <div class="container">
                    <div class="row">
                        <div class="col s12">
                            <div class="card-panel blue lighten-5">
                                <p>
                                    <span class="material-symbols-outlined">tips_and_updates</span>
                                    Below are some weather data for each one of the days you have made some steps.
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s12">
                            <ul class="collapsible popout">
                                <% weatherData.forEach(entry=> { %>
                                    <li>
                                        <div class="collapsible-header">
                                            <i class="material-icons">calendar_month</i>Weather report for <%= entry.stepDate
                                                %>
                                        </div>
                                        <div class="collapsible-body">
                                            <table class="striped">
                                                <thead>
                                                    <tr>
                                                        <th>Time</th>
                                                        <th></th>
                                                        <th>Temp</th>
                                                        <th>Feels Like</th>
                                                        <th>Humidity</th>
                                                    </tr>
                                                </thead>

                                                <tbody>
                                                    <% entry.hourlyData.forEach(hourlyData=> { %>
                                                        <tr>
                                                            <td>
                                                                <%= hourlyData.datetime %>
                                                            </td>
                                                            <td>
                                                                <span class="material-symbols-outlined">
                                                                    <%= hourlyData.icon.replaceAll('-', '_' ) %>
                                                                </span>
                                                            </td>
                                                            <td>
                                                                <%= hourlyData.temp %> &#8451;
                                                            </td>
                                                            <td>
                                                                <%= hourlyData.feelslike %> &#8451;
                                                            </td>
                                                            <td>
                                                                <%= hourlyData.humidity %>%
                                                            </td>
                                                        </tr>
                                                        <% }); %>
                                                </tbody>
                                            </table>
                                        </div>
                                    </li>
                                    <% }) %>
                            </ul>
                        </div>
                    </div>


                </div>
            </div>
            <% } %>

                <script src="/js/weather-data.js"></script>
                   <%- include('./includes/end.ejs') %>