<%- include('./includes/head.ejs') %>
    <link rel="stylesheet" href="/css/add-step.css">
    </head>

    <body>
        <header>
            <%- include('./includes/side-nav.ejs') %>
        </header>

        <div class="section no-pad-bot">
            <div class="container">
                <% if (showSuccessMsg) { %>
                    <div class="row">
                        <div class="col s12">
                            <div class="card-panel green lighten-4">
                                <span >Steps were saved successfully.</span>
                            </div>
                        </div>
                    </div>
                <% } %>
                <% if (errorMsg) { %>
                    <div class="row">
                        <div class="col s12">
                            <div class="card-panel red lighten-1">
                                <span class="white-text">Error: <%= errorMsg %></span>
                            </div>
                        </div>
                    </div>
                <% } %>
                <div class="row">
                    <div class="col s12">
                        <div class="card-panel blue lighten-5">
                            <p>
                                <span class="material-symbols-outlined">tips_and_updates</span>
                                Enter your daily step counter.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <form class="col s12" action="/steps/add" method="POST">
                        <div class="card-panel">
                            <div class="row">
                                <div class="input-field col s12">
                                    <input id="steps" name="steps" type="number" class="validate" required>
                                    <label for="steps">Steps *</label>
                                    <span class="helper-text" data-error="This is a required, numeric field" data-success=""></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <input id="occuredAt" name="occuredAt" type="text" class="datepicker" class="validate" required>
                                    <label for="occuredAt">Day *</label>
                                    <span class="helper-text" data-error="This is a required field" data-success=""></span>
                                </div>
                            </div>
                            <button class="btn waves-effect waves-light" type="submit" name="action">
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <script src="/js/add-step.js"></script>
        <%- include('./includes/end.ejs') %>