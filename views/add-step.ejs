<%- include('./includes/head.ejs') %>
    <link rel="stylesheet" href="/css/add-step.css">
    </head>

    <body>
        <header>
            <ul id="slide-out" class="sidenav sidenav-fixed">
                <li class="logo"><a class="valign-wrapper">Step-o-Meter</a></li>
                <hr />
                <li><a href="/steps/add">Add Step</a></li>
            </ul>
        </header>

        <div class="section no-pad-bot">
            <div class="container">
                <% if (showSuccessMsg) { %>
                    <div class="row">
                        <div class="col s12">
                            <div class="card-panel green lighten-4">
                                <span >Steps were saved successfully.</span>
                            </div>
                        </div>
                    </div>
                <% } %>
                <% if (errorMsg) { %>
                    <div class="row">
                        <div class="col s12">
                            <div class="card-panel red lighten-1">
                                <span class="white-text">Error: <%= errorMsg %></span>
                            </div>
                        </div>
                    </div>
                <% } %>
                <div class="row">
                    <form class="col s6" action="/steps/add" method="POST">
                        <div class="card-panel">
                            <div class="row">
                                <div class="input-field col s12">
                                    <input id="steps" name="steps" type="number" class="validate">
                                    <label for="steps">Steps</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <input id="occuredAt" name="occuredAt" type="text" class="datepicker">
                                    <label for="occuredAt">Day</label>
                                </div>
                            </div>
                            <button class="btn waves-effect waves-light" type="submit" name="action">
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <script src="/js/add-step.js"></script>
        <%- include('./includes/end.ejs') %>